<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <%= form.label :category, 'カテゴリー' %>
  <%= form.select :category, ['生活', '仕事', '健康'] %>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div class="field">
    <%= form.label :priority %>
    <%= form.select :priority, [['高', '高'], ['中', '中'], ['低', '低']], prompt: '優先順位を選択してください' %>
  </div>

  <div class="field">
    <%= form.label :public, "公開" %>
    <%= form.check_box :public, { checked: true } %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
