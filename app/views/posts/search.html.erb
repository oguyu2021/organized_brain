<h1>検索結果</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Priority</th>
      <th>投稿者</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @results.each do |post| %>
      <tr>
        <td><%= post.title%></td>
        <td><%= post.content %></td>
        <td><%= post.priority %></td>
        <td>
          <%= link_to post.user.name, conversations_path(sender_id: current_user.id, recipient_id: post.user.id), method: :post %>
        </td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Top', posts_path %>