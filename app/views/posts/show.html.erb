<div class="container">
  <div class="card mt-4">
    <div class="card-body">
      <h5 class="card-title">Title:</h5>
      <p class="card-text"><%= @post.title %></p>
    </div>
  </div>

  <div class="card mt-4">
    <div class="card-body">
      <h5 class="card-title">Content:</h5>
      <p class="card-text"><%= @post.content %></p>
    </div>
  </div>

  <div class="card mt-4">
    <div class="card-body">
      <h5 class="card-title">Priority:</h5>
      <p class="card-text"><%= @post.priority %></p>
    </div>
  </div>

  <div class="mt-4">
    <%= link_to '編集', edit_post_path(@post), class: 'btn btn-warning' %>
    <%= link_to '一覧画面', posts_path, class: 'btn btn-secondary ml-2' %>
  </div>
</div>
