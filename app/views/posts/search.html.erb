<div class="container">
  <h1 class="mt-4">検索結果</h1>
  <div class="table-responsive">
    <table class="table table-striped mt-4">
      <thead>
        <tr>
          <th>Title</th>
          <th>Content</th>
          <th>Priority</th>
          <th>投稿者</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @results.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.content %></td>
            <td><%= post.priority %></td>
            <td>
              <%= link_to post.user.name, conversations_path(sender_id: current_user.id, recipient_id: post.user.id), method: :post, class: 'btn btn-link' %>
            </td>
            <td><%= link_to 'Show', post, class: 'btn btn-info btn-sm' %></td>
            <td><%= link_to 'Edit', edit_post_path(post), class: 'btn btn-warning btn-sm' %></td>
            <td>
              <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to 'Top', posts_path, class: 'btn btn-secondary mt-4' %>
</div>
