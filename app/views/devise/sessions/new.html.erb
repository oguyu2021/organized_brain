<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h2 class="text-center"><%= t('.sign_in') %></h2>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form' }) do |f| %>
          <% if alert %>
            <p class="alert alert-error"><%= alert %></p>
          <% end %>
            <div class="form-group">
              <%= f.label :email, class: 'font-weight-bold' %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: "メールアドレスを入力してください" %>
            </div>
            <div class="form-group">
              <%= f.label :password, class: 'font-weight-bold' %>
              <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: "パスワードを入力してください" %>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="form-group form-check">
                <%= f.check_box :remember_me, class: 'form-check-input' %>
                <%= f.label :remember_me, class: 'form-check-label' %>
              </div>
            <% end %>
            <div class="text-center">
              <%= f.submit t('.sign_in'), class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="mt-3 text-center">
        <%= link_to '管理者ゲストログイン', guest_admin_login_path, method: :post, class: 'btn btn-secondary mb-2 d-block' %>
        <%= link_to '閲覧用ゲストログイン', guest_login_path, method: :post, class: 'btn btn-secondary d-block' %>
      </div>
    </div>
  </div>
</div>
