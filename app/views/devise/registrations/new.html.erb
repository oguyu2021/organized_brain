<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h2 class="text-center"><%= t('.sign_up') %></h2>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form' }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: "名前を入力してください" %>
            </div>
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: "メールアドレスを入力してください" %>
            </div>
            <div class="form-group">
              <%= f.label :password %>
              <% if @minimum_password_length %>
                <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: "パスワードを入力してください" %>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: "もう一度パスワードを入力してください" %>
            </div>
            <div class="text-center">
              <%= f.submit t('.sign_up'), class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="mt-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
