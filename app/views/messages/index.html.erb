<style>
  /* カスタムCSS */
  .chat-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
  }
  .message-list {
    list-style-type: none;
    padding: 0;
  }
  .message {
    display: flex;
    align-items: flex-start;
    margin-bottom: 10px;
  }
  .message.user1 .avatar {
    order: 1;
    background-color: #00bfff;
  }
  .message.user2 .avatar {
    order: 2;
    background-color: #ffcc29;
  }
  .message .avatar {
    width: 40px;
    height: 40px;
    margin-right: 10px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    color: white;
  }
  .message .content {
    flex: 1;
    padding: 10px;
    background-color: #f0f0f0;
    border-radius: 10px;
  }
  .message .content .meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 12px;
    color: #888;
    margin-top: 5px;
  }
  .message-form {
    display: flex;
    margin-top: 20px;
  }
  .message-form input[type="text"] {
    flex: 1;
    padding: 10px;
    border: none;
    border-radius: 25px;
    background-color: #f0f0f0;
  }
  .message-form button {
    padding: 10px 20px;
    border: none;
    border-radius: 25px;
    background-color: #00bfff;
    color: white;
  }
</style>

<div class="chat-container">
  <% if @over_ten %>
    <%= link_to '以前のメッセージ', '?m=all', class: 'btn btn-primary mb-3' %>
  <% end %>

  <div class="message-list">
    <% @messages.each do |message| %>
      <% if message.body.present? %>
        <div class="message <%= message.user == current_user ? 'user1' : 'user2' %>">
          <div class="avatar"><%= message.user.name.first %></div>
          <div class="content">
            <div><strong><%= message.user.name %></strong></div>
            <p><%= message.body %></p>
            <div class="meta">
              <span><%= message.message_time %></span>
              <% if message.user == current_user %>
                <span><%= message.read ? '既読' : '未読' %></span>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <%= form_with(model: [@conversation, @message], class: "message-form") do |f| %>
    <%= f.text_field :body, placeholder: "メッセージを入力", required: true %>
    <%= f.text_field :user_id, value: current_user.id, type: "hidden" %>
    <%= f.submit "送信" %>
  <% end %>
</div>

<%= link_to '一覧画面', posts_path, class: 'btn btn-secondary mt-4' %>