<% if current_user.try(:admin?) %>
  <div class="container">
    <h1>管理者専用</h1>
  </div>
<% else %>
  <div class="container">
    <h1>一般</h1>
  </div>
<% end %>

<div class="container mt-4">
  <%= link_to '新規投稿', new_post_path, class: 'btn btn-success' %>
  <span class="ml-2">
    <%= link_to "優先順位に並び替え", posts_path(sort_priority: "true"), class: 'btn btn-success' %>
    <%= link_to "メッセージ一覧", users_path, class: "btn btn-success" %></li>
  </span>
</div>

<div class="container mt-4">
  <% @posts.group_by(&:category).each do |category, posts| %>
    <h2> <%= category %> </h2>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>タイトル</th>
          <th>コンテンツ</th>
          <th>優先度</th>
          <th>公開</th>
        </tr>
      </thead>
      <tbody>
        <% posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.content %></td>
            <td><%= post.priority %></td>
            <td><%= post.public %></td>
            <td><%= link_to '詳細', post, class: 'btn btn-info btn-sm' %></td>
            <td><%= link_to '編集', edit_post_path(post), class: 'btn btn-warning btn-sm' %></td>
            <td>
              <%= link_to '消去', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>

<div class="container">
  <h1>コンテンツ検索</h1>
  <%= search_form_for @q, url: search_posts_path, html: { class: 'form-inline' } do |f| %>
    <div class="form-group">
      <%= f.label :content_cont, '調べたいキーワードを入力してください。' %>
      <%= f.search_field :content_cont, class: 'form-control' %>
    </div>
    <%= f.submit '検索', class: 'btn btn-primary ml-2' %>
  <% end %>
</div>
